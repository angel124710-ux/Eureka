loadstring(game:HttpGet("https://rawscripts.net/raw/The-Strongest-Battlegrounds-Tsb-Op-Silent-And-LockOn-44541"))()

game:GetService("Players").LocalPlayer.PlayerGui.KeybindsDisplayGui:Destroy()

local buttons = game:GetService("Players").LocalPlayer.PlayerGui.ContextActionGui.ContextButtonFrame:GetChildren()

table.sort(buttons, function(a, b)
    return a.Name < b.Name
end)

buttons[1].Position = UDim2.new(1, -180, 0.5, -190)
buttons[1].Size = UDim2.new(0, 70, 0, 70)
buttons[2]:Destroy()
buttons[3]:Destroy()
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local camera = workspace.CurrentCamera

-- Esta função remove a detecção de obstrução da câmera
local function disableCameraCollision()
    if player.CameraMinZoomDistance ~= 0.5 then
        player.CameraMinZoomDistance = 0.5
    end
    
    -- O DevTouchCameraRotation e o Invisicam são modos que lidam com colisão.
    -- Para atravessar tudo, geralmente forçamos o modo de visualização.
    player.DevCameraOcclusionMode = Enum.DevCameraOcclusionMode.Invisicam
end

-- Executa a configuração
disableCameraCollision()

-- Opcional: Se quiser que a câmera NUNCA dê zoom automático ao bater em algo
-- Você pode criar um sistema de câmera customizado simples:
camera.ChildAdded:Connect(function(child)
    if child:IsA("ZoomController") or child.Name == "CameraWheel" then
        child:Destroy()
    end
end)
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local localPlayer = Players.LocalPlayer

-- Configurações
local MAX_DISTANCE = 100 -- Distância máxima para o bot focar

-- Função para encontrar o alvo mais próximo (Player ou NPC)
local function getClosestTarget()
    local closestTarget = nil
    local shortestDistance = MAX_DISTANCE

    -- Percorre todos os objetos no Workspace
    for _, obj in pairs(workspace:GetDescendants()) do
        -- Verifica se o objeto tem um Humanoid e RootPart (característica de Players e NPCs)
        if obj:IsA("Humanoid") and obj.Parent:FindFirstChild("HumanoidRootPart") then
            local rootPart = obj.Parent.HumanoidRootPart
            local character = localPlayer.Character
            
            -- Garante que não é o próprio jogador e que o alvo está vivo
            if obj.Parent ~= character and obj.Health > 0 then
                local distance = (character.HumanoidRootPart.Position - rootPart.Position).Magnitude
                
                if distance < shortestDistance then
                    shortestDistance = distance
                    closestTarget = rootPart
                end
            end
        end
    end
    return closestTarget
end

-- Loop de atualização
RunService.RenderStepped:Connect(function()
    local character = localPlayer.Character
    if not character or not character:FindFirstChild("HumanoidRootPart") then return end
    
    local rootPart = character.HumanoidRootPart
    local humanoid = character:FindFirstChild("Humanoid")
    
    -- Busca o alvo (NPC ou Player)
    local target = getClosestTarget()
    
    if target then
        -- Desativa a rotação automática do Roblox para não dar conflito
        if humanoid then humanoid.AutoRotate = false end
        
        -- Faz o corpo olhar para o alvo (travado no eixo Y para não tombar)
        local targetPos = Vector3.new(target.Position.X, rootPart.Position.Y, target.Position.Z)
        rootPart.CFrame = CFrame.lookAt(rootPart.Position, targetPos)
    else
        -- Se não houver alvo, devolve o controle de rotação ao Humanoid
        if humanoid then humanoid.AutoRotate = true end
    end
end)
