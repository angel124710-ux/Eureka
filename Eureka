loadstring(game:HttpGet("https://rawscripts.net/raw/The-Strongest-Battlegrounds-Tsb-Op-Silent-And-LockOn-44541"))()

game:GetService("Players").LocalPlayer.PlayerGui.KeybindsDisplayGui:Destroy()

local buttons = game:GetService("Players").LocalPlayer.PlayerGui.ContextActionGui.ContextButtonFrame:GetChildren()

table.sort(buttons, function(a, b)
    return a.Name < b.Name
end)

buttons[1].Position = UDim2.new(1, -180, 0.5, -190)
buttons[1].Size = UDim2.new(0, 70, 0, 70)
buttons[2]:Destroy()
buttons[3]:Destroy()
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local camera = workspace.CurrentCamera

-- Esta função remove a detecção de obstrução da câmera
local function disableCameraCollision()
    if player.CameraMinZoomDistance ~= 0.5 then
        player.CameraMinZoomDistance = 0.5
    end
    
    -- O DevTouchCameraRotation e o Invisicam são modos que lidam com colisão.
    -- Para atravessar tudo, geralmente forçamos o modo de visualização.
    player.DevCameraOcclusionMode = Enum.DevCameraOcclusionMode.Invisicam
end

-- Executa a configuração
disableCameraCollision()

-- Opcional: Se quiser que a câmera NUNCA dê zoom automático ao bater em algo
-- Você pode criar um sistema de câmera customizado simples:
camera.ChildAdded:Connect(function(child)
    if child:IsA("ZoomController") or child.Name == "CameraWheel" then
        child:Destroy()
    end
end)
